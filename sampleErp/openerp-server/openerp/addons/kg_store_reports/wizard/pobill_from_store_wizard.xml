<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_pobill_store_report" model="ir.ui.view">
            <field name="name">PO Bill Transfer From Store </field>
            <field name="model">pobill.from.store</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
             <form string="PO Bill Transfer From Store">
                <separator string="PO Bill Transfer From Store To Purchase" colspan="4"/>
                   
                    <notebook tabpos="up" colspan="4">
						<page string="Filters" name="filters">
							<field name="filter" colspan="4"/>
							<separator string="Bill Date" colspan="4"/>
							<field name="date_from" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}" colspan="4"/>
							<field name="date_to" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}"  colspan="4"/>
						</page>
                        
                        <page string="Supplier" name="supplier">
                            <group colspan="2" col="2">
								<separator string="Supplier" colspan="2" col="2" />
								<field name = "supplier" domain="[('supplier','=',True)]"/>
							</group>
                        </page>
                        <page string="Product Type" name="product_type">
                            <group colspan="2" col="2">
								<separator string="Product Type" colspan="2" col="2" />
								<field name = "product_type"/>
							</group>
                        </page>
                                                                         
                    </notebook>                
                    <separator colspan="4"/>
						<group col="4" colspan="4">
							<button icon="gtk-print" name="check_report" string="Print" type="object" colspan="2" default_focus="1" />
							<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						</group>
                </form>
            </field>
        </record>

        <record id="action_pobill_store_report" model="ir.actions.act_window">  
            <field name="name">PO Bill Transfer From Store</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pobill.from.store</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
           
		

    </data>
</openerp>
