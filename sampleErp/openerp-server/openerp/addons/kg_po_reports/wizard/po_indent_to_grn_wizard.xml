<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_poindent_to_grn_report" model="ir.ui.view">
            <field name="name">Purchase Indent To GRN</field>
            <field name="model">po.indent.to.grn.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
             <form string="Purchase Indent To GRN">
                <separator string="Purchase Indent To GRN" colspan="4"/>
                   
                    <notebook tabpos="up" colspan="4">
						<page string="Filters" name="filters">
							<field name="filter" colspan="4"/>
							<separator string="PO Date" colspan="4"/>
							<field name="date_from" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}" colspan="4"/>
							<field name="date_to" attrs="{'readonly':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}"  colspan="4"/>
						</page>
                                             
                        <page string="Product Name" name="product_id">
                            <group colspan="2" col="2">
								<separator string="Product Name" colspan="2" col="2" />
								<field name = "product_id"/>
							</group>
                        </page>
                                                                         
                    </notebook>                
                    <separator colspan="4"/>
						<group col="4" colspan="4">
							<button icon="gtk-print" name="check_report" string="Print" type="object" colspan="2" default_focus="1" />
							<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						</group>
                </form>
            </field>
        </record>

        <record id="action_po_indent_grn_report" model="ir.actions.act_window">  
            <field name="name">Purchase Indent To GRN</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">po.indent.to.grn.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
                
	

    </data>
</openerp>
