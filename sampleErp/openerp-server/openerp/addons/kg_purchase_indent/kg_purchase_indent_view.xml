            <field name="view_id" ref="kg_pi_line_form_view"/>
            <field name="act_window_id" ref="kg_piline_approved_action"/>
        </record>
	
	
		
		
		<menuitem
		id="kg_pi_tree_menu"
		sequence="1"
		parent="kg_pi_con_menu"
		action="kg_piline_approved_action"/>
		
		
